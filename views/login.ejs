<%- include('partials/header-sign-in'); %>

<form class="form-signin" action="/login" method="POST">
  <a href="/" class="mb-3 d-block btn btn-sm btn-light">Home</a>

  <p class="bodyText text-danger mb-4"> <%= body.error%> </p>

  <i class="fas fa-sign-in-alt fa-3x"></i>
  <h3 class="mt-3 mb-3 font-weight-normal">Please sign in</h3>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="text" name="username" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  <div class="mt-4 ">
    <a href="/auth/google" class="btn btn-lg btn-block btn-social btn-google">
      <span class="fab fa-google"></span>
      Sign in with Twitter
    </a>
    <!-- <a href="/auth/google" class="btn btn-primary btn-lg">
      <i class="fab fa-google fa-bold"></i>
      Continue with Google
    </a> -->
  </div>

  <!-- <button type="button" class="btn btn-gplus"><i class="fab fa-google-plus-g pr-1"></i> Google +</button> -->



</form>

<%- include('partials/footer'); %>
