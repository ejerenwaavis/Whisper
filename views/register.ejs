<%- include('partials/header-sign-in'); %>

<form class="form-signin" action="/register" method="POST">
  <a href="/" class="mt-3 d-block btn btn-sm btn-light">Home</a>

  <p class="bodyText text-danger mb-4"> <%= body.error%> </p>
  <i class="fas fa-user-tie fa-3x"></i>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input type="text" name="username" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input type="password" name="password" re id="inputPassword" class="form-control" placeholder="Password" required>
  <button class="btn btn-lg btn-secondary btn-block" type="submit">Register </button>

  <div class="mt-5 ">
    <a href="/auth/google" class="btn btn-primary btn-lg">
      <i class="fab fa-google fa-bold"></i>
      Continue with Google
    </a>
  </div>
</form>


<%- include('partials/footer'); %>
